<div>
  <div>
    <label for="name">Name</label>
    <input type="text" name="name" id="name" value="<%= locals.existing ? locals.existing.details.name : "" %>" required>
    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor"
      stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <circle cx="12" cy="12" r="10" />
      <circle cx="12" cy="10" r="3" />
      <path d="M7 20.662V19a2 2 0 0 1 2-2h6a2 2 0 0 1 2 2v1.662" />
    </svg>
  </div>
  <div>
    <label for="birthdate">Date of Birth</label>
    <input type="date" name="birthdate" id="birthdate" value="<%= locals.existing ? locals.existing.details.birthdate.toJSON().split("T")[0] : "" %>" required>
    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor"
      stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <path d="M8 2v4" />
      <path d="M16 2v4" />
      <rect width="18" height="18" x="3" y="4" rx="2" />
      <path d="M3 10h18" />
    </svg>
  </div>
</div>

<button type="submit">
  <%= locals.selection === "edit-author" ? "Update" : "Add" %>
  Author
</button>
